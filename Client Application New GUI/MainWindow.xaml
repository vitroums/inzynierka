<Window x:Class="Client_Application_New_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Application_New_GUI"
        mc:Ignorable="d"
        Title="PKI Cloud Client" Height="350" Width="525"
        x:Name="_this">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="299" VerticalAlignment="Top" Width="105" Margin="10,10,0,0" DataContext="{Binding ElementName=_this}" ItemsSource="{Binding Path=CertificatesList}"/>
        <Button x:Name="button" Content="Add certificate from file" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Margin="120,10,0,0" Click="AddCertificateFromFileButton"/>

    </Grid>
</Window>
